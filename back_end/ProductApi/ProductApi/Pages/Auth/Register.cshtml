@page
@model ProductApi.Pages.Auth.RegisterModel

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

@section Scripts {
    <script src="~/js/auth.js"></script>
}

<div class="auth-container">
    <!-- Section Image -->
    <div class="auth-image-section">
        <div class="auth-floating-element auth-floating-1"></div>
        <div class="auth-floating-element auth-floating-2"></div>
        <div class="auth-floating-element auth-floating-3"></div>

        <div class="auth-image-content">
            <img src="https://images.unsplash.com/photo-1596462502278-27bfdc403348?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
                 alt="Produits cosmétiques" class="auth-beauty-image">
            <h1 class="auth-image-title">VOTRE BEAUTÉ, NOTRE PASSION</h1>
            <p class="auth-image-subtitle">Rejoignez notre communauté</p>
        </div>
    </div>

    <!-- Section Formulaire -->
    <div class="auth-form-section">
        <div class="auth-form-container">
            <div class="auth-logo">
                <h1>BEAUTY<span class="dot">.</span></h1>
            </div>

            <h2 class="text-center mb-4">Créer un compte</h2>

            <!-- Formulaire Register -->
            <form method="post">
                <div class="auth-form-group">
                    <label for="register-firstname">Prénom</label>
                    <input type="text" id="register-firstname" asp-for="FirstName" placeholder="Votre prénom" required>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="auth-form-group">
                    <label for="register-lastname">Nom</label>
                    <input type="text" id="register-lastname" asp-for="LastName" placeholder="Votre nom" required>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="auth-form-group">
                    <label for="register-email">Email</label>
                    <input type="email" id="register-email" asp-for="Email" placeholder="votre@email.com" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="auth-form-group">
                    <label for="register-password">Mot de passe</label>
                    <div class="auth-password-container">
                        <input type="password" id="register-password" asp-for="Password" placeholder="Créez un mot de passe" required>
                        <button type="button" class="auth-toggle-password" onclick="togglePassword('register-password')">👁️</button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="auth-form-group">
                    <label for="register-confirm-password">Confirmer le mot de passe</label>
                    <div class="auth-password-container">
                        <input type="password" id="register-confirm-password" asp-for="ConfirmPassword" placeholder="Confirmez votre mot de passe" required>
                        <button type="button" class="auth-toggle-password" onclick="togglePassword('register-confirm-password')">👁️</button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="auth-checkbox-group" style="margin-bottom: 2rem;">
                    <input type="checkbox" id="newsletter" asp-for="Newsletter" checked>
                    <label for="newsletter">S'inscrire à la newsletter</label>
                </div>

                <!-- Messages -->
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-error">
                        @Model.ErrorMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success">
                        @Model.SuccessMessage
                    </div>
                }

                <button type="submit" class="auth-btn auth-btn-primary">Créer mon compte</button>
            </form>

            <div class="auth-register-link" style="margin-top: 1rem;">
                Déjà un compte ? <a href="/Auth/Login">Se connecter</a>
            </div>
        </div>
    </div>
</div>