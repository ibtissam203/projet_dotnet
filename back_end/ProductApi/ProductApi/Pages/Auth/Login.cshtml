@page
@model ProductApi.Pages.Auth.LoginModel

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

@section Scripts {
    <script src="~/js/auth.js"></script>
}

<div class="auth-container">
    <!-- Section Image -->
    <div class="auth-image-section">
        <div class="auth-floating-element auth-floating-1"></div>
        <div class="auth-floating-element auth-floating-2"></div>
        <div class="auth-floating-element auth-floating-3"></div>

        <div class="auth-image-content">
            <img src="https://images.unsplash.com/photo-1596462502278-27bfdc403348?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
                 alt="Produits cosmétiques" class="auth-beauty-image">
            <h1 class="auth-image-title">VOTRE BEAUTÉ, NOTRE PASSION</h1>
            <p class="auth-image-subtitle">Découvrez l'excellence cosmétique</p>
        </div>
    </div>

    <!-- Section Formulaire -->
    <div class="auth-form-section">
        <div class="auth-form-container">
            <div class="auth-logo">
                <h1>BEAUTY<span class="dot">.</span></h1>
            </div>

            <h2 class="text-center mb-4">Se connecter</h2>

            <!-- Formulaire Login SEULEMENT -->
            <form method="post">
                <div class="auth-form-group">
                    <label for="login-email">Email</label>
                    <input type="email" id="login-email" asp-for="Email" placeholder="votre@email.com" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="auth-form-group">
                    <label for="login-password">Mot de passe</label>
                    <div class="auth-password-container">
                        <input type="password" id="login-password" asp-for="Password" placeholder="Votre mot de passe" required>
                        <button type="button" class="auth-toggle-password" onclick="togglePassword('login-password')">👁️</button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="auth-remember-forgot">
                    <div class="auth-checkbox-group">
                        <input type="checkbox" id="remember-me" asp-for="RememberMe">
                        <label for="remember-me">Se souvenir de moi</label>
                    </div>
                    <a href="#" class="auth-forgot-password">Mot de passe oublié ?</a>
                </div>

                <!-- Messages d'erreur -->
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-error">
                        @Model.ErrorMessage
                    </div>
                }

                <button type="submit" class="auth-btn auth-btn-primary">Se connecter</button>

                <div class="auth-divider">
                    <span>Ou continuer avec</span>
                </div>

                <div class="auth-social-login">
                    <button type="button" class="auth-social-btn">
                        <span>Google</span>
                    </button>
                    <button type="button" class="auth-social-btn">
                        <span>Facebook</span>
                    </button>
                </div>

                <div class="auth-register-link">
                    Pas de compte ? <a href="/Auth/Register">Créer un compte</a>
                </div>
            </form>
        </div>
    </div>
</div>