<script>
    // FONCTION CORRIGÉE POUR CHARGER LE PRODUIT
    function loadProduct(id, name, price, quantity, imageUrl) {
        console.log('Chargement produit:', { id, name, price, quantity, imageUrl });

        // Nettoyer l'URL de l'image
        const cleanImageUrl = decodeHtmlEntities(imageUrl || '');

        // Remplir les champs du formulaire
        document.getElementById('editProductId').value = id;
        document.getElementById('editProductName').value = name || '';
        document.getElementById('editProductPrice').value = price || '0';
        document.getElementById('editProductQuantity').value = quantity || '0';
        document.getElementById('editCurrentImageUrl').value = cleanImageUrl;

        // Afficher l'aperçu de l'image
        const imagePreview = document.getElementById('editImagePreview');
        const imagePlaceholder = document.getElementById('editImagePreviewPlaceholder');

        if (cleanImageUrl && cleanImageUrl !== '/images/products/default-product.jpg' && cleanImageUrl !== '') {
            imagePreview.src = cleanImageUrl;
            imagePreview.style.display = 'block';
            imagePlaceholder.style.display = 'none';
            console.log('✅ Image chargée:', cleanImageUrl);
        } else {
            imagePreview.style.display = 'none';
            imagePlaceholder.style.display = 'flex';
            console.log('ℹ️ Aucune image à afficher');
        }

        // Réinitialiser le champ fichier
        document.getElementById('editProductImageFile').value = '';
        document.getElementById('editFileName').textContent = 'Aucun fichier choisi';
    }

    // FONCTION POUR DÉCODER LES CARACTÈRES HTML
    function decodeHtmlEntities(text) {
        const textArea = document.createElement('textarea');
        textArea.innerHTML = text;
        return textArea.value;
    }

    // GESTION DU CHANGEMENT DE FICHIER
    document.addEventListener('DOMContentLoaded', function() {
        const editFileInput = document.getElementById('editProductImageFile');
        const editFileName = document.getElementById('editFileName');
        const editImagePreview = document.getElementById('editImagePreview');
        const editImagePlaceholder = document.getElementById('editImagePreviewPlaceholder');

        editFileInput.addEventListener('change', function(e) {
            if (this.files && this.files[0]) {
                const file = this.files[0];
                editFileName.textContent = file.name;

                const reader = new FileReader();
                reader.onload = function(e) {
                    editImagePreview.src = e.target.result;
                    editImagePreview.style.display = 'block';
                    editImagePlaceholder.style.display = 'none';
                };
                reader.readAsDataURL(file);
            } else {
                resetEditImagePreview();
            }
        });

        function resetEditImagePreview() {
            editImagePreview.style.display = 'none';
            editImagePlaceholder.style.display = 'flex';
            editFileName.textContent = "Aucun fichier choisi";
        }

        document.getElementById('editModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById('editProductForm').reset();
            resetEditImagePreview();
        });
    });
</script>